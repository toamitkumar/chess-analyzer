{
  "name": "chesspulse",
  "version": "1.0.0",
  "description": "ChessPulse - Track your chess performance, analyze games, and improve with AI-powered insights",
  "main": "index.js",
  "scripts": {
    "start": "node src/api/api-server.js",
    "analyze": "node src/models/analyzer.js",
    "dashboard": "node src/api/api-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:clean": "rm -f data/chess_analysis_test.db data/test_*.db tests/data/*.db",
    "build": "cd frontend && npm install && npm run build --configuration production",
    "download-puzzles": "node scripts/download-lichess-puzzles.js",
    "import-puzzle-index": "node scripts/import-puzzle-index.js",
    "test-import": "bash scripts/test-import.sh",
    "import-production": "bash scripts/import-to-production.sh"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@supabase/supabase-js": "^2.89.0",
    "axios": "^1.13.2",
    "chess.js": "^1.0.0-beta.6",
    "cli-progress": "^3.12.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sqlite3": "^5.1.7",
    "stockfish": "^17.1.0",
    "unbzip2-stream": "^1.4.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "chess",
    "pgn",
    "stockfish",
    "analysis"
  ],
  "author": "",
  "license": "MIT"
}
